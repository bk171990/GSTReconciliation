  <div class="pageheader">
                <h1>New Customer</h1>
                <div class="breadcrumb-wrapper hidden-xs">
                    <span class="label">You are here:</span>
                    <ol class="breadcrumb">
                        <li><a href="/">Dashboard</a>
                        </li>
                        <li>Forms</li>
                        <li class="active">Update Password</li>
                    </ol>
                </div>
            </div>
            <section id="main-content" class="animated fadeInUp">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Update Password
                                <div class="actions pull-right">
                                 <i class="fa fa-expand"></i>
                                    <i class="fa fa-chevron-down"></i>
                                    <i class="fa fa-times"></i>
                                </div>
                            </div>
                                     <div class="panel-body">
                           
                          <%= form_for @user,url:{action: 'update_password',id: @user.id},method: :patch do |f| %>
                             
                                <form class="form-horizontal">
                                    <div class="form-group">
                                      <div class="col-sm-3">
                                        <label class="col-sm-6 control-label">New Password</label>
                                          <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder:'New Password',class: "form-control" %>
                                      </div>
                                    </div>

                                    <div class="form-group">
                                      <div class="col-sm-3">
                                        <label class="col-sm-12 control-label">Confirm New Password</label>
                                            <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:'Confirm New Password',class: "form-control" %>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                      <div class="col-sm-3">
                                        <label class="col-sm-8 control-label">Upload Profile Image</label>
                                          <%=f.file_field :image,class: "form-control"%>
                                        </div>
                                    </div>
                                    <br><br><br>

                                   <div class="panel-body">
                                        <div class="col-sm-offset-3 col-sm-12">
                                        <%= f.submit "Update" ,class: "btn btn-success"%>
                                        </div>
                                    </div>
                                <%end%>
                            </div>
                        </div>
                    </div>
                </div>
        </section>