        <section class="main-content-wrapper">
            <!-- Main content view  -->
                             <div class="pageheader">
                <h1>View All Items</h1>
                <div class="breadcrumb-wrapper hidden-xs">
                    <span class="label">You are here:</span>
                    <ol class="breadcrumb">
                        <li><a href="/">Dashboard</a>
                        </li>
                        <li>Tables</li>
                        <li class="active">View All Itmes</li>
                    </ol>
                </div>
            </div>
            <section id="main-content" class="animated fadeInUp">
                      <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                          <div class="panel-heading">
                            <h3 class="panel-title">Items</h3>
                            <div class="actions pull-right">
                             <i class="fa fa-expand"></i>
                                <i class="fa fa-chevron-down"></i>
                                <i class="fa fa-times"></i>
                            </div>
                          </div>
                          <div class="panel-body">
                           <%= link_to 'Add New Items', new_item_path, class: 'btn btn-primary' %>
                            <%= link_to 'Add Unit of Measure', new_unit_of_measure_path, class: 'btn btn-success' %>
                        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                          <thead>
                            <tr>
                              <th>Sr.No</th>
                              <th>Item Description</th>
                              <th>Item hsn no</th>
                              <th>Uom</th>
                              <th>Unit Price</th>
                              <th>CGST(%)</th>
                              <th>SGST(%)</th>
                              <th>IGST(%)</th>
                              <th colspan="3"></th>
                            </tr>
                          </thead>
                          <tbody>
                           <tbody>
                              <% @items.each_with_index do |item,i| %>
                                <tr>
                                  <td><%=i+1 %></td>
                                  <td><%= item.dogns %></td>
                                  <td><%= item.item_hsn_no %></td>
                                  <td><%= item.unit_of_measure.name%></td>
                                  <td><%= item.rate %></td>
                                  <td><%= item.cgst%></td>
                                  <td><%= item.sgst%></td>
                                  <td><%= item.igst%></td>
                                  <td><%= link_to 'Show', item %></td>
                                  <td><%= link_to 'Edit', edit_item_path(item) %></td>
                                  <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                </tr>
                              <% end %>
                          </tbody>
                        </table>
                         
                       </div>
                     </div>
                </div>
            </div>
              </section>
