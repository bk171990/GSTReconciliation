 <div class="pageheader">
 <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-warning">
                            <div class="panel-heading">
                                <h3 class="panel-title">Invoice Details</h3>
                                <div class="actions pull-right">
                                 <i class="fa fa-expand"></i>
                                    <i class="fa fa-chevron-down"></i>
                                    <i class="fa fa-times"></i>
                                </div>
                            </div>
                            <div class="panel-body">
                            <%= link_to 'Download PDF ',show_invoice_invoice_path(@invoice, format: 'pdf'),target: '_blank', class: "btn red"%> <b> | </b>
                                <p><strong>Invoice Number:</strong>
                                <%=@invoice.invoice_no%></p>
                                <p><strong>Date:</strong>
                                <%=@invoice.date%></p>
                                 <p> <strong>Customer Name:</strong>
                               <%=@invoice.customer.customer_name%></p>
                              
                             <br>
  
                            <div class="table-responsive">
                              <table class="table table-bordered table-striped">
                                <thead>
                                  <tr>
                                   <th>Sr No</th>
                                    <th>Item Description</th>
                                    <th>Unit Price</th>
                                    <th>Quantity</th>
                                    <th>Net Amount</th>
                                    <th>Tax Rate</th>
                                    <th>Tax Type</th>
                                    <th>Tax Amount</th>
                                    <th>Total Amount</th>
                                  </tr>
                                </thead>

                                <tbody>
                                  <% @invoice.invoice_items.each_with_index do |i,n|%>
                                    <tr>
                                      <td><%= n + 1 %></td>
                                      <td><%= i.item.dogns%></td>
                                       <td>&#8377;<%= i.unit_price%></td>
                                      <td><%= i.quantity%></td>
                                      <td>&#8377;<%= i.net_amt%></td>
                                      <td><%= i.tax_rate%>&#37;</td>
                                      <td>CGST+SGST</td>
                                      <td>&#8377;<%= i.tax_amt%></td>
                                      <td align="right">&#8377;<%= i.total_amt%></td>
                                     
                                    </tr>
                                  <% end %>
                                </tbody>
                              </table>
                              </div>
                              </div>
                              </div>
                              </div>
                              </div>

                              <br>

                            </div>
                        </div>
                    </div>
</div>