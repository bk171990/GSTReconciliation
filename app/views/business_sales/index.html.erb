<p id="notice"><%= notice %></p>

<h1>Business Sales</h1>

<table>
  <thead>
    <tr>
      <th>Invoice date</th>
      <th>Serial no</th>
      <th>Gstin no</th>
      <th>Eway bill</th>
      <th>Transportation mode</th>
      <th>Vehicle no</th>
      <th>Date</th>
      <th>Time of supply</th>
      <th>Place of supply</th>
      <th>Total invoice</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_sales.each do |business_sale| %>
      <tr>
        <td><%= business_sale.invoice_date %></td>
        <td><%= business_sale.serial_no %></td>
        <td><%= business_sale.gstin_no %></td>
        <td><%= business_sale.eway_bill %></td>
        <td><%= business_sale.transportation_mode %></td>
        <td><%= business_sale.vehicle_no %></td>
        <td><%= business_sale.date %></td>
        <td><%= business_sale.time_of_supply %></td>
        <td><%= business_sale.place_of_supply %></td>
        <td><%= business_sale.total_invoice %></td>
        <td><%= link_to 'Show', business_sale %></td>
        <td><%= link_to 'Edit', edit_business_sale_path(business_sale) %></td>
        <td><%= link_to 'Destroy', business_sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

